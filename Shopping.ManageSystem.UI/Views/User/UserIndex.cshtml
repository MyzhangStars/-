        function fun_quan() {
            $(".cb_body").prop("checked", $("#cb_head").prop("checked"))
        }
        //单删
        function fun_del(id) {
            if (confirm('请确认删除')) {
                $.ajax({
                    url: '/User/UserDelete?id=' + id,
                    type: 'post',
                    success: function (data) {
                        if (data.Code == 1) {
                            alert(data.Message);
                            location.reload();//重新加载一次页面
                        }
