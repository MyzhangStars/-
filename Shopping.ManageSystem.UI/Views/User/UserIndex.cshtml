<body class="container-fruit">
    <div>
        @using (Ajax.BeginForm("UserIndex", "User", new AjaxOptions { HttpMethod = "Get", UpdateTargetId = "show" }))
        {
            <!---上下文检索项 Start-->
            <div class="row-fruit">

                <div class="form-inline pull-left">
                    <button type="button" class="btn btn-default" data-toggle="modal" data-target="#AddUser">
                        <span class="glyphicon glyphicon-plus">新增</span>
                    </button>
                    <select class="form-control" name="Is_Delete">
                        <option value="">请选择</option>
                        <option value="True">True</option>
                        <option value="False">False</option>
                    </select>
                    <button type="button" class="btn btn-default" onclick="fun_pi()">
                        <span class="glyphicon glyphicon-pencil">批量逻辑删除</span>
                    </button>
                </div>

                <div class="form-inline pull-right">

                    <input type="text" class="form-control pull-left" id="name" name="userName" placeholder="请输入用户名">
                    <button type="submit" class="btn btn-default pull-left">
                        <span class="glyphicon glyphicon-search">检索</span>
                    </button>
                </div>

            </div>
            <!---上下文检索项 End-->
        }
    </div>
    <div id="show">
        @Html.Partial("_PartialUser", Model)
    </div>

