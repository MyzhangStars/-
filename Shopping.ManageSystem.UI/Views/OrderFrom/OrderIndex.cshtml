@using Shopping.ManageSystem.Model
@using Webdiyer.WebControls.Mvc
@model PagedList<Shopping.ManageSystem.Model.OrderFrom>

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>电商后台管理系统</title>
    <!---代码中实际部分可以抽取出来  Start--------->
    <script src="/Scripts/jquery-3.3.1.js"></script>
    <link href="/Scripts/bootstrap/css/bootstrap.css" rel="stylesheet">
    <link href="/Scripts/bootstrap/css/bootstrap-datetimepicker.min.css" rel="stylesheet">
    <script src="/Scripts/bootstrap/jquery-1.10.2.min.js"></script>
    <script src="/Scripts/bootstrap/js/bootstrap.js"></script>
    <script src="/Scripts/bootstrap/js/moment-with-locales.js"></script>
    <script src="/Scripts/bootstrap/js/bootstrap-datetimepicker.min.js"></script>
    <script src="/Scripts/MvcPager.min.js"></script>
    <script type="text/javascript">
        $(function () {
            $("#ModifyTime").datetimepicker({



                format: 'yyyy-mm-dd hh:00:00', // 文本框时间格式，设置为0,最后时间格式为2017-03-23 17:00:00


            })


        });
    </script>
    <!----代码中实际部分可以抽取出来 End----------->
</head>
<body class="container-fruit">
    <!---上下文检索项 Start-->
    <div class="row-fruit">

        <div class="form-inline pull-left">
            <!--订单新增可以模拟-->
            <!--<button type="button" class="btn btn-default" data-toggle="modal" data-target="#AddUser">
                 <span class="glyphicon glyphicon-plus">新增</span>
             </button>-->
            <select class="form-control">
                <option value="0">==请选择订单状态==</option>
                <option value="1">未付款</option>
                <option value="2">已付款</option>
                <option value="3">已发货</option>
            </select>
            <button type="button" class="btn btn-default">
                <span class="glyphicon glyphicon-pencil">修改订单状态</span>
            </button>


        </div>
        <div class="form-inline pull-right">

            <input type="text" class="form-control pull-left" id="name" placeholder="请输入开始时间">
            <input type="text" class="form-control pull-left" id="name" placeholder="请输入结束时间">
            <button type="button" class="btn btn-default pull-left">
                <span class="glyphicon glyphicon-search">检索</span>
            </button>
        </div>

    </div>
    <!---上下文检索项 End-->

    @using (Ajax.BeginForm("OrderIndex", "OrderFrom", new AjaxOptions { HttpMethod = "Get", UpdateTargetId = "orderFrom" }))
    {

    }

    <div id="orderFrom">
        @Html.Partial("_PartialOrder",Model);
    </div>

</body>
</html>
