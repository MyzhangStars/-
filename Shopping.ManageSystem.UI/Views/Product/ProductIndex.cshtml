    <script type="text/javascript">
        $(function () {
            //添加富文本框
            var E = window.wangEditor;
            var editor2 = new E('#div3');
            //换成上传上传图片的路径
            editor2.customConfig.uploadImgServer = '/Product/Upload';
            editor2.customConfig.onchange = function (data) {
                $("#TextArea1").val(data);
            }
            editor2.create();

            //编辑富文本框
            var E = window.wangEditor;
            var editor3 = new E('#div4');
            //换成上传上传图片的路径
            editor3.customConfig.uploadImgServer = '/Product/Upload';
            editor3.customConfig.onchange = function (data) {
                $("#EditTextArea12").val(data);
            }
            editor3.create();

            //添加产品信息
            $('#productCreate').submit(function () {
                $('#productCreate').ajaxSubmit({
                    url: '/Product/ProductCreate',
                    type: "post",
                    data: $("#productCreate").serialize(),
                    success: function (data) {
                        if (data.Code == 1) {
                            alert(data.Message);
                            $("#btnCLose").click(); //关闭该窗口
                            location.reload();//重新加载一次页面
                        }
                    }
                });
                return false;
            })
            //添加商品验证
            $('#productCreate').bootstrapValidator({
                // 默认的提示消息
                message: '值无效',
                // 表单框里右侧的icon
                feedbackIcons: {
                    valid: 'glyphicon glyphicon-ok',
                    invalid: 'glyphicon glyphicon-remove',
                    validating: 'glyphicon glyphicon-refresh'
                },
                submitHandler: function (a, b, c) { },
                fields: {
                    ProductName: {
                        validators: {
                            notEmpty: {
                                message: '商品名称不能为空'
                            },
                            remote: { // ajax校验，获得一个json数据（{'valid': true or false}）
                                url: '/Product/UniqueProductName?ProductName=' + $("#productCreate input[name=ProductName]").val(),       //验证地址
                                message: '商品已存在',   //提示信息
                                type: "post",//模式是post方式，post方式提交更好
                                data: function (data) {  //自定义提交数据，默认为当前input name值
                                    console.log(data);
                                    return {
                                        act: 'is_registered'
                                    };
                                }
                            },
                        }

                    },
                    ProductPrice: {
                        validators: {
                            notEmpty: {
                                message: '产品价格不能为空'
                            },
                            regexp: {
                                regexp: /(^[1-9]\d*(\.\d{1,2})?$)|(^0(\.\d{1,2})?$)/,
                                message: '价格必须为数字'
                            }
                        }
                    },
                    CategoryID: {
                        validators:
                        {
                            notEmpty: {
                                message: '产品分类不能为空'
                            }
                        }
                    },
                    ProductDesc: {
                        validators:
                        {
                            notEmpty: {
                                message: '产品介绍不能为空'
                            }
                        }
                    },
                    ProductTime: {
                        validators:
                        {
                            notEmpty: {
                                message: '编辑时间不能为空'
                            }
                        }
                    }
                }
            });

            //修改产品信息
            $('#productEdit').submit(function () {
                $('#productEdit').ajaxSubmit({
                    url: '/Product/ProductUpdate',
                    type: "post",
                    data: $("#productEdit").serialize(),
                    success: function (data) {
                        if (data.Code == 1) {
                            alert(data.Message);
                            $("#btnCLose").click(); //关闭该窗口
                            location.reload();//重新加载一次页面
                        }
                    }
                });
                return false;
            })

            //修改商品验证
            $('#productEdit').bootstrapValidator({
                // 默认的提示消息
                message: '值无效',
                // 表单框里右侧的icon
                feedbackIcons: {
                    valid: 'glyphicon glyphicon-ok',
                    invalid: 'glyphicon glyphicon-remove',
                    validating: 'glyphicon glyphicon-refresh'
                },
                submitHandler: function (a, b, c) { },
                fields: {
                    ProductName: {
                        validators: {
                            notEmpty: {
                                message: '商品名称不能为空'
                            }
                        }

                    },
                    ProductPrice: {
                        validators: {
                            notEmpty: {
                                message: '产品价格不能为空'
                            },
                            regexp: {
                                regexp: /(^[1-9]\d*(\.\d{1,2})?$)|(^0(\.\d{1,2})?$)/,
                                message: '价格必须为数字'
                            }
                        }
                    },
                    CategoryID: {
                        validators:
                        {
                            notEmpty: {
                                message: '产品分类不能为空'
                            }
                        }
                    },
                    ProductDesc: {
                        validators:
                        {
                            notEmpty: {
                                message: '产品介绍不能为空'
                            }
                        }
                    }
                }
            });

            //导入

            //添加商品验证
            $('#productVast').bootstrapValidator({
                // 默认的提示消息
                message: '值无效',
                // 表单框里右侧的icon
                feedbackIcons: {
                    valid: 'glyphicon glyphicon-ok',
                    invalid: 'glyphicon glyphicon-remove',
                    validating: 'glyphicon glyphicon-refresh'
                },
                submitHandler: function (a, b, c) {
                    $('#productVast').ajaxSubmit({
                        url: '/Product/ProductVastCreate',
                        type: "post",
                        data: $("#productVast").serialize(),
                        success: function (data) {
                            alert(data.Message);
                            if (data.Code == 1) {
                                $("#btnCLose").click(); //关闭该窗口
                                location.reload();//重新加载一次页面
                            }
                        }
                    });
                },
                fields: {
                    ExcelName: {
                        validators: {
                            notEmpty: {
                                message: '文件不能为空'
                            },
                        }

                    },
                }
            });
        });

        //单删
        function fun_shan(id) {
            if (confirm('请确认删除')) {
                $.ajax({
                    url: "/Product/ProductDelete?id=" + id,
                    type: "post",
                    success: function (data) {
                        if (data.Code == 1) {
                            alert(data.Message);
                            location.reload();//重新加载一次页面
                        }
                    }
                });
            }
        }

        //全选功能
        function fun_quan() {
            $(".cb_body").prop("checked", $("#cb_head").prop("checked"))
        }

        //批量删除
        function fun_pishan() {
            if (confirm('请确认删除')) {
                var pid = [];
                $(".cb_body:checked").each(function () {
                    pid.push($(this).val());
                });

                $.ajax({
                    url: "/Product/ProductDelete?id=" + pid.toString(),
                    type: "post",
                    success: function (data) {
                        if (data.Code == 1) {
                            alert(data.Message);
                            location.reload();//重新加载一次页面
                        }
                    }
                });
            }
        }

        //反填数据
        function fun_ProductEdit(id) {

            //编辑富文本框
            var E = window.wangEditor;
            var editor4 = new E('#div4');
            //换成上传上传图片的路径
            editor4.customConfig.uploadImgServer = '/Product/Upload';
            editor4.customConfig.onchange = function (data) {
                $("#EditTextArea12").val(data);
            }
            editor4.create();

            $.ajax({
                url: '/Product/ProductEdit?id=' + id,
                type: "post",
                success: function (data) {
                    console.log(data)
                    if (data.Code == 1) {
                        $("#EditProductID").val(data.Data.ProductID);
                        $("#EditProductName").val(data.Data.ProductName);
                        $("#EditProductPrice").val(data.Data.ProductPrice);
                        $("#EditProductCagegory").val(data.Data.CategoryID);
                        $("#productImg").prop("src", data.Data.ProductImg);
                        $(".EditIs_Delete[value=" + data.Data.Is_Delete + "]").prop("checked", "checked");
                        editor4.create();
                        editor4.txt.html(data.Data.ProductDesc);
                    }
                }
            });
        }
