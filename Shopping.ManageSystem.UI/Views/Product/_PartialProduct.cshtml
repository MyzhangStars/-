@using Webdiyer.WebControls.Mvc
@model PagedList<Shopping.ManageSystem.Model.Product>
<!----表格开始  Start-->
<table class="table table-bordered table-hover">

    <thead>
        <tr>
            <th><input type="checkbox" id="cb_head" onchange="fun_quan()"/></th>
            <th>产品名称</th>
            <th>产品价格</th>
            <th>产品图片</th>
            <th>产品分类</th>
            <th>修改时间</th>
            <th>是否显示</th>
            <td>操作</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td><input type="checkbox" class="cb_body" value="@item.ProductID"/></td>
                <td>@item.ProductName</td>
                <td>
                    @item.ProductPrice ￥
                </td>
                <td><img src="@item.ProductImg" width="50" height="50" /></td>
                <td>@item.CategoryModels.CategoryName</td>
                <td>@item.ProductTime.ToString("yyyy-MM-dd")</td>
                <td>
                    @if (item.Is_Delete)
                    {
                        <span class="glyphicon glyphicon-remove"></span>
                    }
                    else
                    {
                        <span class="glyphicon glyphicon-ok"></span>
                    }
                </td>
                <td>
                    <button type="button" class="btn btn-default">
                        <span class="glyphicon glyphicon-pencil" onclick="fun_ProductEdit(@item.ProductID)" data-toggle="modal" data-target="#EditProduct">编辑</span>
                    </button>
                    <button type="button" class="btn btn-default" onclick="fun_shan(@item.ProductID)">
                        <span class="glyphicon glyphicon-remove">删除</span>
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>
<!----表格开始  End-->
<!----分页 Start-->
<div class="text-center">
    @Ajax.Pager(Model, new PagerOptions
        {
            /*
             * 设置分页显示的样式
             */
            ActionName = "ProductIndex",                 //分页方法名
            FirstPageText = "首页",
            LastPageText = "最后一页",
            NextPageText = "下一页",
            PrevPageText = "上一页",
            PageIndexParameterName = "pageIndex", //跟控制器的第一个参数要一致
            ContainerTagName = "ul",
            CssClass = "pagination",
            CurrentPagerItemTemplate = "<li class=\"active\"><a href=\"#\">{0}</a></li>",
            DisabledPagerItemTemplate = "<li class=\"disabled\"><a>{0}</a></li>",
            PagerItemTemplate = "<li>{0}</li>",
            GoToButtonId = "goBtn1",
            PageIndexBoxId = "pageBox1",
            PageIndexOutOfRangeErrorMessage = "您输入的页码超出范围!"

        },

        new MvcAjaxOptions
        {
            HttpMethod = "get",
            UpdateTargetId = "porductshow",//更新数据的标签ID
            DataFormId = "form0"    //分页对应的条件搜索表单ID,
        })

    <span style="display:inline-block;  position:relative;top:-30px;">
        共 @Model.TotalPageCount 页 @Model.TotalItemCount 条记录，当前为第 @Model.CurrentPageIndex 页,
        跳转到第<input type="text" id="pageBox1" style="width:30px" />页<button id="goBtn1">跳转</button>
    </span>
</div>

<!----分页 End-->